{

    "file_path": {
        "raw_data": "data/raw/OpenAP_Macro.parquet.gzip",
        "processed_data": "data/processed/processed_data.parquet.gzip"
    },


    "hyperparameters": {
        "random_seed": 666,
        "ElasticNet": {
            "alpha": [0.0001, 0.0005, 0.001],
            "l1_ratio": [0.25, 0.5, 0.75, 0.99],
            "max_iter": [10000],
            "tol": [0.00001]
        },
    "GradientTreeBoosting": {
        "n_leaves": [3, 7, 15, 31, 63]
        },
    "NeuralNetwork": {
        "hidden_layers": [2, 3, 4],
        "neurons_per_layer": [32, 64],
        "activation_functions": ["relu"],
        "learning_rates": [0.001],
        "batch_sizes": [256]
        },
    "NeuralNetworkTraining": {
        "final_epochs": 100,
        "use_early_stopping": true,
        "early_stopping_patience": 10,
        "# Tuning (Optuna) settings": "These control Optuna tuning behavior for NeuralNetwork classes",
        "tuning_epochs": 5,
        "tuning_trials": 20,
        "pruner": "median",
        "pruner_warmup": 1,
        "# Performance / device settings": "Settings to improve performance on macOS Apple Silicon (M1/M2)",
        "use_mixed_precision": true,
        "use_metal": true,
        "intra_op_threads": 4,
        "inter_op_threads": 2
        },
    "NeuralNetworkWithEmbeddings": {
        "embedding_dims": [100]
        }
    },


    "train_iteration": {
        "data_start": 2000,
        "test_end": 2020,
        "val_years": 3
    }
}
